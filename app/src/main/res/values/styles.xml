<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ImageButtonControl">
        <item name="android:layout_width">@dimen/dp_50</item>
        <item name="android:layout_height">@dimen/dp_50</item>
        <item name="android:layout_marginLeft">@dimen/dp_16</item>
        <item name="android:layout_marginTop">@dimen/dp_20</item>
        <item name="android:background">@null</item>
        <item name="android:layout_marginStart" tools:targetApi="jelly_bean_mr1">@null</item>
    </style>

    <style name="Notification">
        <item name="android:layout_width">@dimen/dp_30</item>
        <item name="android:layout_height">@dimen/dp_30</item>
        <item name="android:layout_marginTop">@dimen/dp_4</item>
        <item name="android:background">@null</item>
        <item name="android:layout_marginEnd" tools:ignore="NewApi">@dimen/dp_15</item>
        <item name="android:layout_marginRight">@dimen/dp_15</item>
    </style>
</resources>
